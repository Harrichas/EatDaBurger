<h1>EAT DA BURGER!</h1>

<div class="pic-form">
<img src="../public/assets/img/burger.png">

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ba">Burger Name:</label>
    <input type="text" id="ba" name="name">
  </div>

  <button type="submit" id="submit">Add burger</button>
</form>
</div>


<div class="parent">
<div class="waiting">
<h2>Burgers waiting to be devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
	      {{burger_name}}

	      <button class="burger-item" data-id="{{id}}">Devour
	      </button>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="devoured">
<h2>Burgers devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
     <li>
	      {{burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
